@page
@model FizzBuzzNET.Pages.Fizzbuzzes.IndexModel

@{
    ViewData["Title"] = "Ostatnio szukane";
}

<h1>Index</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fizzbuzz[0].Liczba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fizzbuzz[0].Wynik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fizzbuzz[0].Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Fizzbuzz)
        {
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Liczba)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Wynik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        @if (item.Email==User.Identity.Name)
                        {
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
